<%if @user.provider %>
<% @user.provider.provider_details.each do |provider| %>
    <div class="d-flex flex-row bd-highlight mb-3">
      <div class="p-2 bd-highlight">
        <%= image_tag(provider.image, style:'width:200px;height:200px') if provider.image.attached? %>
      </div>
       <div class="p-2 bd-highlight">
        <p>
          <strong>City: </strong>
          <%= provider.city %>
        </p>
        
        <p>
          <strong>State: </strong>
          <%= provider.state %>
        </p>
        
        <p>
          <strong>Pin Code: </strong>
          <%= provider.zipcode %>
        </p>

        <p>
          <strong>About: </strong>
          <%= provider.category.name %>
        </p>
        
        <p>
          <strong>Descriptio: </strong>
          <%= provider.description %>
        </p>

        <%= link_to 'Edit', edit_provider_detail_path(provider), class: "btn btn-warning sm-btn" %>
        <%= button_to 'Delete', provider_detail_path(provider), method: :delete, class: "btn btn-danger sm-btn" %>
      </div>
      <div class="col">
      </div>
    </div>
    <hr>
<% end %>

<%end%>


