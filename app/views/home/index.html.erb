<% if user_signed_in? %>
<h1>All Users</h1>

<%= link_to "Register as a Provider Here", user_path(current_user), method: :get, style: 'float: right; margin: 10px', class: 'btn btn-danger sm-btn' %>
<br><br>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>User ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone No</th>
      <th>D.O.F.</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.contact %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
<strong>Please sign in first </strong>
<hr>
<% end %>