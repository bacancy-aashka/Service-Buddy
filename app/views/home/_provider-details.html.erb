<% @users.each do |user|%>
    <% user.provider.provider_details.each do |provider| %>
        <div class="d-flex flex-row bd-highlight mb-3 justify-content-center">
            <div class="p-2 bd-highlight">
                <%= image_tag(provider.image, style:'width:200px;height:200px') if provider.image.attached? %>
            </div>
            <div class="p-2 bd-highlight">
                <p>
                <strong>City: </strong>
                <%= provider.city %>
                </p>
                
                <p>
                <strong>State: </strong>
                <%= provider.state %>
                </p>
                
                <p>
                <strong>Pin Code: </strong>
                <%= provider.zipcode %>
                </p>

                <p>
                <strong>About: </strong>
                <%= provider.category.name %>
                </p>
                
                <p>
                <strong>Description: </strong>
                <%= provider.description %>
                </p>
                <%= link_to "Contact",msg_path, remote: true, class:'btn btn-primary' %>
            </div>
        </div>
       
    <% end %>
<%end%>