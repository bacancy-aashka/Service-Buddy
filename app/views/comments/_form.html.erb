<%= form_with(model: [ @provider_detail, @provider_detail.comments.build ], remote: true) do |form| %>
  <div class="form-group">
    <%= form.text_area :body, placeholder: "Review here", class: "form-control" %>
  <div>
  <div class="form-group" style="margin-top:10px">
    <%= form.submit %>
  </div>
<% end %>