<header class="bg-dark">
  <div class="n demo">
    <%= link_to "SERVICE BUDDY", root_path, id: "logo" %>
    <nav>
      <ul class="nav justify-content-end">    
        <%= link_to "Home",root_path %>
            
        <% if current_user %>
          <%= link_to "Inbox", inbox_users_path %>
          <div class="refresh_nav">
            <sup class="badge"><% navbar_inbox_count %><%= @count%></sup>
          </div>
          <%= link_to "Your Profile", user_path(current_user) %>
      
          <div class="btn-group">
            <button id="btnGroupDrop1" type="button" class="btn btn-secondary btn-sm dropdown-toggle border border-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              &nbsp;&nbsp;My Account&nbsp;&nbsp;
            </button>
          <div class="dropdown-menu bg-dark border border-white dropdown-menu-right" aria-labelledby="btnGroupDrop1">
            <h6 class="dropdown-header" style="color: white"><%= current_user.fullname %></h6>
                <div class="dropdown-divider"></div>
                  <%= link_to "Edit Profile",edit_user_registration_path, class: "dropdown-item" %>              
                  <%= link_to "Sign Out", destroy_user_session_path, method: :delete,class: "dropdown-item" %>
                </div>
          </div> 
          &nbsp&nbsp;
        <% else %>
          <%= link_to 'Sign Up', new_user_registration_path %>
          <%=link_to 'Sign In', user_session_path %>
        <% end %>

        <% if current_user && current_user.admin? %>      
          <div class="btn-group">
          <button id="btnGroupDrop1" type="button" class="btn btn-secondary btn-sm dropdown-toggle border border-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            &nbsp;&nbsp;Admin Corner&nbsp;&nbsp;
          </button>
          <div class="dropdown-menu bg-dark border border-white dropdown-menu-right" aria-labelledby="btnGroupDrop1">
            <div class="dropdown-divider"></div>
              <%= link_to 'User\'s info', admin_index_path, class: "dropdown-item" %> 
              <%= link_to 'Pending Requests', pending_provider_details_admin_index_path, class: "dropdown-item" %> 
              <%= link_to 'Add Category', new_category_path, class: "dropdown-item" %> 
              <%= link_to 'Show Category', categories_path, class: "dropdown-item" %> 
            </div>
          </div>      
          &nbsp&nbsp;
        <% end %>
      </ul>
    </nav>
  </div>
</header>