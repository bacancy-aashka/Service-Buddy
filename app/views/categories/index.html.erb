<h1>Categories</h1>

<table class="table", style="width: 400px">
  <thead class="thead-dark">
    <tr>
    <th>Id </th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-light sm-btn" %></td>
        <td><%= button_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning sm-btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
<%= link_to 'Back', root_path, class: "btn btn-dark" %>

